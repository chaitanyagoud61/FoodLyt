<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/food_avld_or_not"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_greencircle">

                </ImageView>

                <TextView
                    android:id="@+id/food_name"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kodi kura chitigare"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/light_hash"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_rupee">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="serif"
                            android:text="200"
                            android:textColor="@color/hash"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="normal"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:weightSum="3"
                        android:padding="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:background="@drawable/bordercolor"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/add_item"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="@color/green"
                            android:textAlignment="center"
                            android:textSize="@dimen/_20sdp">

                        </TextView>
                        <TextView
                            android:id="@+id/item_quanty"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="@dimen/_15sdp">

                        </TextView>
                        <TextView
                            android:id="@+id/minus_item"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAlignment="center"
                            android:textSize="@dimen/_22sdp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp" >

                    <ImageView
                        android:id="@+id/rstrnt_food_image"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_delivery"
                        android:layout_centerInParent="true"/>

                   <!-- <Button
                        android:id="@+id/add_item"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:background="@color/white"
                        android:fontFamily="@font/arbutus"
                        android:text="ADD"
                        android:textColor="#43A047"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />-->

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>