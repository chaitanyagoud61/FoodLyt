    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_veg"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:shadowColor="#ffffff"
            android:text="Chicken Biriyani"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:text="₹ 500"
            android:textSize="12dp" />
    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="right|end|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/subCategoryQuantityLayout"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/rounded_add"
            android:gravity="center"
            android:layout_gravity="end"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="3"
            tools:ignore="RtlHardcoded"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

<!--
            <TextView
                android:id="@+id/sub_product_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="—"
                android:enabled="false"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:visibility="invisible" />
-->

            <TextView
                android:id="@+id/sub_product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="ADD"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />


<!--
            <TextView
                android:id="@+id/sub_product_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="right|top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="＋"
                android:paddingTop="1dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="invisible" />
-->


        </LinearLayout>


        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:weightSum="5"
            tools:ignore="RtlHardcoded"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/product_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="—"
                android:background="@drawable/rounded_add"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="ADD"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/product_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="＋"
                android:background="@drawable/rounded_add"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="2dp"
        android:id="@+id/lastDivider"
        android:background="@drawable/dotted_line"></View>



</LinearLayout>
